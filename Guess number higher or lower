/* LeetCode provides the API:
   int guess(int num);
   - return -1 if my number is lower than num
   - return  1 if my number is higher than num
   - return  0 if num is correct
*/

int guess(int num); // provided by LeetCode judge

int guessNumber(int n){
    int left = 1, right = n;
    while (left <= right) {
        int mid = left + (right - left) / 2; // prevents overflow
        int res = guess(mid);
        if (res == 0) return mid;
        if (res < 0) { // target is lower
            right = mid - 1;
        } else {       // res > 0 -> target is higher
            left = mid + 1;
        }
    }
    return -1; // should not happen if 1 <= target <= n
}
